<h1><%- title %></h1>
<%- messages() %>

<div class="message-controls">
    <a href="/messages/new" class="management-button">Create New Message</a>
    <a href="/messages/archive" class="management-button">View Archived Messages</a>
</div>

<% if (unreadCount > 0) { %>
    <p class="unread-count">You have <strong><%= unreadCount %></strong> unread message(s).</p>
<% } else { %>
    <p class="unread-count">You have no unread messages.</p>
<% } %>

<div id="message-list">
    <%- messageGrid %>
</div>